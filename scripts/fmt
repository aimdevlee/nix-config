#!/usr/bin/env bash
echo "üìù Formatting Nix files..."

# Find all .nix files and format them using nixfmt-rfc-style
find . -name "*.nix" -type f | while read -r file; do
    echo "  Formatting: $file"
    nixfmt "$file" 2>/dev/null || {
        echo "  ‚ö†Ô∏è  Failed to format: $file"
    }
done

echo "‚úÖ Formatting complete!"